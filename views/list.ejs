
<%- include("header") -%>
  <body>
    <div class="box" id="heading">
      <h1><%=listTitle%></h1>
    </div>


    <div class="box">

        <% for(var i=0;i<newitem.length;i++){ %>
          <div class="item">
            <input type="checkbox">
            <p> <%= newitem[i] %> </p>
          </div>
        <%}%>

        <form  class="item" action="/" method="post">
          <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
          <button class="plus-btn" type="submit" name="list" value="<%=listTitle%>" >+</button>
        </form>



    </div>
    <form action="/" method="post">
      <button class="clear-btn" type="submit" name="list" value="serverRestart" >Clear List</button>
    </form>

<%- include("footer") -%>
